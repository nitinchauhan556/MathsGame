<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score_Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURRENT SCORE:0"
        android:textSize="30sp"
        android:id="@+id/rscore"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATHS GAME"
        android:textSize="45sp"
        android:layout_above="@+id/rscore"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"/>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_share_white_36"
        android:layout_below="@+id/rscore"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"/>

</RelativeLayout>